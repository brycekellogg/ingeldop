<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:compat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlHardcoded"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.brycekellogg.ingeldop.DealButton
        android:id="@+id/dealButton"

        android:layout_width="@dimen/defaultCardDstWidth"
        android:layout_height="@dimen/defaultCardDstHeight"

        android:padding="0dp"
        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_marginTop="@dimen/topMargin"
        compat:layout_constraintLeft_toLeftOf="parent"
        compat:layout_constraintTop_toTopOf="parent"

        android:scaleType="fitCenter"
        android:src="@drawable/dealbutton"
        android:rotation="0"/>

    <com.brycekellogg.ingeldop.DiscardButton
        android:id="@+id/discardButton"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        compat:autoSizeTextType="uniform"
        compat:autoSizeMinTextSize="3sp"
        compat:autoSizeMaxTextSize="200sp"
        android:maxLines="1"

        android:layout_marginLeft="@dimen/leftMargin"
        android:layout_marginRight="0dp"
        compat:layout_constraintLeft_toLeftOf="parent"
        compat:layout_constraintTop_toBottomOf="@id/dealButton"
        compat:layout_constraintRight_toRightOf="@id/dealButton"

        android:text="@string/discardText" />

    <!--
        - Set layout width and height to 0dp so they expand to constraints
        -
    -->
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:background="@color/background"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/topScrollMargin"
        android:layout_marginRight="@dimen/rightScrollMargin"

        android:layout_marginLeft="32dp"
        android:layout_marginBottom="0dp"


        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="10dp"

        compat:layout_constraintBottom_toBottomOf="@+id/dealButton"
        compat:layout_constraintLeft_toRightOf="@+id/dealButton"
        compat:layout_constraintRight_toRightOf="parent"
        compat:layout_constraintTop_toTopOf="parent">

        <com.brycekellogg.ingeldop.HandViewExpanded
            android:id="@+id/handView"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </HorizontalScrollView>

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/background"

        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"

        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"


        compat:layout_constraintBottom_toBottomOf="parent"
        compat:layout_constraintLeft_toRightOf="@id/discardButton"
        compat:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
